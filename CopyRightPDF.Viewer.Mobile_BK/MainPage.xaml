<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CopyRightPDF.Viewer.Mobile.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.PdfViewer;assembly=Syncfusion.Maui.PdfViewer"
    xmlns:viewModel="clr-namespace:CopyRightPDF.Viewer.Mobile.ViewModel">

    <ContentPage.BindingContext>
        <viewModel:PdfViewerViewModel />
    </ContentPage.BindingContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid
            Grid.Row="0"
            Padding="8"
            BackgroundColor="#FFF6F6F6"
            IsVisible="{OnPlatform MacCatalyst=False}">
            <Label
                FontSize="Medium"
                Text="Choose File"
                TextColor="Black"
                VerticalOptions="Center" />
            <ImageButton
                Aspect="Center"
                BackgroundColor="#FFF6F6F6"
                Command="{Binding OpenDocumentCommand}"
                HorizontalOptions="End"
                Source="openfile.png"
                VerticalOptions="Center" />
        </Grid>
        <syncfusion:SfPdfViewer
            x:Name="pdfViewer"
            Grid.Row="1"
            DocumentSource="{Binding PdfDocumentStream}" />
    </Grid>
</ContentPage>
