                    <DataGridTextColumn
                        Binding="{Binding ExpireDate, StringFormat=dd/MM/yyyy}"
                        ElementStyle="{StaticResource ElementStyleVerticalCenter}"
                        Header="Expiration Date"
                        HeaderStyle="{StaticResource DataGridHeaderCenter}" />
                    <DataGridTextColumn
                        Binding="{Binding MinVersion}"
                        ElementStyle="{StaticResource ElementStyleVerticalCenter}"
                        Header="Min Version"
                        HeaderStyle="{StaticResource DataGridHeaderCenter}" />
                    <DataGridTextColumn
                        Binding="{Binding NumberOfActivatedDevice}"
                        ElementStyle="{StaticResource ElementStyleVerticalCenter}"
                        Header="    Number Of&#x0a;Activated Device"
                        HeaderStyle="{StaticResource DataGridHeaderTransactionColumn}" />
                    <DataGridTextColumn
                        Binding="{Binding ActivatedDeviceMAC}"
                        ElementStyle="{StaticResource ElementStyleVerticalCenter}"
                        Header="Activated MAC"
                        HeaderStyle="{StaticResource DataGridHeaderTransactionColumn}" />
                    <DataGridTextColumn
                        Binding="{Binding ActivatedOS}"
                        ElementStyle="{StaticResource ElementStyleVerticalCenter}"
                        Header="Activated OS"
                        HeaderStyle="{StaticResource DataGridHeaderTransactionColumn}" />
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding LastAccess, StringFormat=dd/MM/yyyy HH:mm}"
                        ElementStyle="{StaticResource ElementStyleVerticalCenter}"
                        Header="Last Access"
                        HeaderStyle="{StaticResource DataGridHeaderTransactionColumn}" />
                </DataGrid.Columns>
            </DataGrid>

            <WrapPanel
                Grid.Row="4"
                Margin="0,15,0,0"
                HorizontalAlignment="Right">
                <Button
                    Width="100"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding UpdateCommand}"
                    Foreground="#FF2196F3"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Foreground="#FF2196F3"
                            Kind="ContentSaveAllOutline" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="#FF2196F3"
                            Text="Save" />
                    </StackPanel>
                </Button>

                <Button
                    Width="100"
                    Margin="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    BorderBrush="#44bd32"
                    Command="{Binding ReloadCommand}"
                    Foreground="#44bd32"
                    Style="{StaticResource MaterialDesignOutlinedButton}">
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            Width="16"
                            Height="16"
                            VerticalAlignment="Center"
                            Foreground="#44bd32"
                            Kind="Reload" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="#44bd32"
                            Text="Reload" />
                    </StackPanel>
                </Button>
            </WrapPanel>
            <materialDesign:Snackbar
                Grid.Row="4"
                Background="#0984e3"
                Foreground="White"
                MessageQueue="{Binding MessageQueue}" />
        </Grid>
    </materialDesign:DialogHost>
</Window>
